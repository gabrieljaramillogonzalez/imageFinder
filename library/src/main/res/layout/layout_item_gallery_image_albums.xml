<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemGalleryImageAlbums_mcvImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/ItemGalleryImageAlbums_rlImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ItemGalleryImageAlbums_ivImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_pdf" />

        <TextView
            android:id="@+id/ItemGalleryImageAlbums_tvNameImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/ItemGalleryImageAlbums_ivImage"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            tools:text="Nombre del pdf" />

        <TextView
            android:id="@+id/ItemGalleryImageAlbums_tvSizeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ItemGalleryImageAlbums_tvNameImage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/ItemGalleryImageAlbums_ivImage"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="Peso del pdf" />

        <CheckBox
            android:id="@+id/ItemGalleryImageAlbums_cbImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>